<h1> <%= @user.name %> User Details </h1>

<%= render @user %>

<div class="card-list">
  <h2>Bio:</h2>
  <p><%= @user.bio %></p>
</div>

<h2>Last three posts:</h2>

<div class="card-list">
  <% @recent_posts.each do |post| %>
    <div class="posts">
  <%= link_to user_post_path(post.user_id, post.id) do %>
    <h4><%=post.title%></h4>
  <% end %>
  <p><%=post.text%></p>
  <p>
    <span>
    Comments: <%= post.comments_counter ? post.comments_counter : 0 %>
    </span>
    <span>
    likes: <%= post.likes_counter ? post.likes_counter : 0 %>
    </span>
  </p>
</div>

  <% end %>
</div>


<button><%= link_to "See all posts", user_posts_path(@user.id) %></button>